<div class="grid content-between h-screen">
	<div>
		<%= render '/shared/user_navbar'%>
		<p>
		<%= button_to "Sign Out", destroy_user_session_path, method: :delete %>
		</p>
			<main class="container mx-auto px-5 mt-5  w-full">
				<% @categories.each do |category| %>
					
							<div class="flex gap-2 shadow-xl p-4 w-full">
								<%= link_to category_entities_path(category.id) do %>
								<div class="avatar">
									<div class="w-24 mask mask-squircle">
										<img src="<%= category.icon %>" />
									</div>
								</div>
								<div class="grid content-between">
									<p class=""><%= category.name %></p>
									<span class="text-sm"><%= category.created_at.strftime("%b %d, %Y") %></span>
								</div>
								<% end %>
								<div>
									<p class="font-bold text-xl">$17.00</p>
									<%= button_to category_path(current_user, category),
        						method: :delete,
      	
        					title: "Delete #{category.name.capitalize} category" do %>
									delete
								<% end %>
								</div>
							</div>
					
				<% end %>
			</main>
	</div>

	<div class = "flex flex-col text-center justify-end bg-[#5FB523] p-3" >
		<%= link_to 'Add Categories', new_category_path, class:"border border-xl border-white text-white px-8"%>
	</div>
</div>
